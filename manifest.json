{
  "manifest_version": 2,
  "name": "Image Downloader",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "downloads",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  }
}
